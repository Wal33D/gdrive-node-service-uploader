{
   "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
         "*": ["node_modules/*"],
         "src/*": ["src/*"]
      },
      "declaration": true, // Add this line
      "declarationMap": true // Optionally generate source maps for declarations
   },
   "include": ["*.ts", "*.js", "src/**/*.ts"]
}
